<div class="row-fluid sortable ui-sortable">
  <!--<div class="box span12">-->
    <div class="box-header">
      <h2><i class="icon-align-justify"></i><span class="break"></span>Add Flight Detail</h2>
      <div class="box-icon">
        <a class="btn-setting" href="#"><button aria-hidden="true" data-dismiss="modal" class="close" type="button" onclick="cancel_box()">Ã—</button></a>
        <a class="btn-minimize" href="#"><i class="icon-chevron-up"></i></a>
        <a class="btn-close" href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="box-content">
   <%#= @attendee_detail.id %>
      <% @flight_detail = FlightDetail.where(:attendee_detail_id => @attendee_detail.id).first %>
<%= form_for :flight_detail, :html => {:onsubmit => "return false;"} do  |f| %><!--, :url => "/welcome/create_flight_detail"-->
    <p>
    <%= f.text_field :airline_name,:placeholder => "Airline Name" %>
      <%= hidden_field_tag :attendee_id, @attendee_detail.id %>
    </p>
    <p>
    <%= f.text_field :flight_number,:placeholder => "Flight Number"  %>
    </p>
    <p>
    <%= f.text_field :departuring_from,:placeholder => "Departure From"  %>
    </p>
    <p>
    <%= f.text_field :departure_time,:placeholder => "Departure Time" ,:id => "datetimepicker3" %>
    </p>
    <p>
    <%= f.text_field :arriving_at ,:placeholder => "Arrival At"  %>
    </p>
    <p>
    <%= f.text_field :arriving_time ,:placeholder => "Arrival Time" ,:id => "datetimepicker4"%>
    </p>
    <p>
    <%= f.text_field :connections ,:placeholder => "Connections" %>
    </p>
          <%= f.submit "Save", :id => "add_flight_detail",:class=>"btn btn-lg btn-info margin10" %>
          <a class="btn btn-lg btn-info margin10" id="cancel_boxs" onclick="cancel_box()"> Cancel </a>
<% end %>
        </div>
        <!--</div>-->
        </div>
<script type="text/javascript">
  $("#add_flight_detail").click(function(){
      var id = $("#attendee_id").val()
      var airline_name = $("#flight_detail_airline_name").val()
      var flight_number = $("#flight_detail_flight_number").val()
      var departure_airport = $("#flight_detail_departuring_from").val()
      var departure_time = $("#datetimepicker3").val()
      var arrival_airport = $("#flight_detail_arriving_at").val()
      var arrival_time = $("#datetimepicker4").val()
      var connections = $("#flight_detail_connections").val()
      $.ajax({
          url:'/welcome/add_flight_detail?id='+ id + "&airline_name=" + airline_name + "&flight_number=" + flight_number + "&departure_airport=" + departure_airport +"&departure_time=" + departure_time + "&arrival_airport=" + arrival_airport + "&arrival_time=" +arrival_time + "&connections=" + connections,
          type:'get',
          dataType:'html',
          processData:false,
          success:function (data) {
              if (data == "not") {
                  window.location.href = '/sign_in';
              }
              else {
                  $("#all_partials").hide()
              }
          },
          error:function (data) {
          }
      });
  })

        function cancel_box(){
            $("#all_partials").hide()
        }
  $('#datetimepicker3').datetimepicker({
  	datepicker:false,
  	format:'H:i',
  	step:5
  });
  $('#datetimepicker4').datetimepicker({
  	datepicker:false,
  	format:'H:i',
  	step:5
  });
//  $('#datetimepicker').datetimepicker();
//  $('#datetimepicker1').datetimepicker();

</script>
<style>
  .xdsoft_datetimepicker{
      z-index: 999999999999;
  }
</style>
