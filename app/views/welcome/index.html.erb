                                    type:'get',
                                    dataType:'html',
                                    processData:false,
                                    success:function (data) {
                                        alert(data)
                                        if (data == "not") {
                                            window.location.href = '/sign_in';
                                        }
                                        else {
                                            window.location.href = '/attendee_details/attendee_home';
                                        }
                                    },
                                    error:function (data) {
                                    }
                                });

            })
        </script>




