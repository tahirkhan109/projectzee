<div class="container-fluid">
<div class="row-fluid sortable ui-sortable ">
  <div class="box span12">
    <div class="box-header">
      <h2><i class="icon-align-justify"></i>Create Conferences</h2>
      <div class="box-icon">
        <a class="btn-setting" href="#"><i class="icon-wrench"></i></a>
        <a class="btn-minimize" href="#"><i class="icon-chevron-up"></i></a>
        <a class="btn-close" href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="box-content">

<%= form_for @conference do |f|%>
          <% if @conference.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@conference.errors.count, "error") %> prohibited
                this article from being saved:</h2>
              <ul>
              <% @conference.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
            <% end %>
<%= f.text_field :title ,:placeholder => "Title" %><br>
<%= f.text_field :start_datetime,:placeholder => "Start Date", :id => "datetimepicker00" %><br>
<%= f.text_field :end_datetime,:placeholder => "End Date", :id => "datetimepicker100" %><br>
    <%= f.text_field :location ,:placeholder => "location" %><br>
    <%= f.text_field :conf_header ,:placeholder => "Conference Header" %><br>
          <%= link_to "Back",  conferences_path, :class => 'btn btn-primary' %>
          <%= f.submit "Save" , :class => 'btn btn-primary' %>

<% end %>
      </div>
      </div>
      </div>
      </div>
<script src="./jquery.datetimepicker.js"></script>
<script>
$('#datetimepicker').datetimepicker({ minDate: 0 });
$('#datetimepicker1').datetimepicker({ minDate: 0 });
var logic = function( currentDateTime ){
	if( currentDateTime.getDay()==6 ){
		this.setOptions({
			minTime:'11:00'
		});
	}else
		this.setOptions({
			minTime:'8:00'
		});
};

</script>
