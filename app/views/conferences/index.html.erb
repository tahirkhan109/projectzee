<div class="container-fluid">
<div class="row-fluid sortable ui-sortable ">
  <div class="box span12">
    <div class="box-header">
      <h2><i class="icon-align-justify"></i><span class="break"></span>Listing Conferences</h2>
      <div class="box-icon">
        <a class="btn-setting" href="#"><i class="icon-wrench"></i></a>
        <a class="btn-minimize" href="#"><i class="icon-chevron-up"></i></a>
        <a class="btn-close" href="#"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="box-content">
      <table class="table table-bordered table-striped table-condensed" id="Conf_table" class="conf_table">
        <thead>
        <tr>
          <th>Title: </th>
          <th>Start Date & Time: </th>
          <th>End Date & Time: </th>
          <th>Location: </th>
          <th>Show: </th>
          <th>Edit: </th>
          <th>Delete: </th>
        </tr>
        </thead>
        <tbody>

        <% @conferences.each do |conf| %>
            <tr>
             <td><%= conf.title %></td>
             <td><%= conf.start_datetime %></td>
             <td><%= conf.end_datetime %></td>
             <td><%= conf.location %></td>
             <td><%= link_to "Show",conf , :class => 'label label-success'%></td>
             <td><%= link_to "Edit",edit_conference_path(conf), :class => 'label label-warning' %></td>
             <td><%= link_to "Delete", conference_path(conf),:method => :delete, :data => {:confirm => "Are You Sure!!"}, :class => 'label label-important' %></td>
            </tr>
        <%end%>


        </tbody>
      </table>
    </div>
  </div>
</div>
  <div style="margin:0px 0px 35px 0px">
  <%= link_to "New Conference",new_conference_path, :class => 'btn btn-primary' %>
    </div>
</div>
