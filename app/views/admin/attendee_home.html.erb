                    </div><!--login_btn -->
                </div><!--wrapper ends-->
            </div><!--dlp_box_in-->
        </div><!--DLP-->

     <script type="text/javascript">
         function open_no_pdf() {
             setTimeout(function(){
             hudMsg('info', "Agenda detail missing against this conference.")
             },100)
         }

         function open_pdf() {
        if (<%= @conference.agenda_detail.blank? %>) {
            alert("Agenda detail missing against this conference.")
            hudMsg('info', "Agenda detail missing against this conference.")
                 return false;
             }
             else {
                 $.ajax({
                     url: '/attendee_details/agenda_popup?id=' + <%= @conference.id %>,
                     type: 'get',
                     dataType: 'html',
                     processData: false,
                     success: function (data) {
                         if (data == "not") {
                             window.location.href = '/sign_in';
                         }
                         else {
                             setTimeout(function(){
                                 $("#all_partials").show;
                                 $("#all_partials").css("display", "block");
                                 $("#all_partials").html(data);
                             },1000)
                         }
                     },
                     error: function (data) {
                     }
                 });
             }


         }
     </script>